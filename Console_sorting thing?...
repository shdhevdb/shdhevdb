using System;

class Program 
{
  public static void Main ()
  {
    int[] array = { 3, 5, 9, 1, 8, 2, 4, 7, 6, 10 };
    //Bubl_sort(array);
    Bogo_sort(array);
  }
  
  public static void Bubl_sort(int[] array)
  {
    int tmp;
    for (int i = 0; i < array.Length; i++)
    {
      for (int j = 0; j < array.Length - 1; j++)
      {
        if (array[i] < array[j])
        {
          tmp = array[i];
          array[i] = array[j];
          array[j] = tmp;
        }
      }
    }
    prnt_array(array);
  }

  public static void Bogo_sort(int[] array)
  {
    //or do a check inside this func
    //if not sorted, shuffle array and repeat
    int tmp;
    Random rnd = new Random(array.Length);
    for (int i = 0; i < array.Length; i++)
    {
      int rnd_index = rnd.Next(0, array.Length);
      tmp = array[i];
      array[i] = array[rnd_index];
      array[rnd_index] = tmp;
    }
    prnt_array(array);
  }

  public static void prnt_array(int[] array)
  {
    for (int i = 0; i < array.Length; i++)
    {
      Console.Write(array[i] + ",");
    }
  }

  public static bool Check_array(int[] array)
  {
    for (int i = 0; i < array.Length; i++)
    {
      if (array[i] < array[i++])
      {
        return true;
      }
    }
  return false;
  }

  //public static void Usr_choice(){}
  //public static void Insert_sort(int[] array){}
  //public static void Quick_sort(int[] array){}
}
